{
    "name": "api/datagovgr",
    "description": "Client for data.gov.gr APIs",
    "require": {
        "php": ">=8.1",
        "php-http/discovery": "^1.14",
        "psr/http-client": "^1.0",
        "psr/http-client-implementation": "^1.0",
        "psr/http-message": "^1.0",
        "psr/http-message-implementation": "^1.0"
    },
    "require-dev": {
        "laminas/laminas-diactoros": "^2.13",
        "php-http/curl-client": "^2.2",
        "php-http/mock-client": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Gov\\Data\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Gov\\Data\\": "tests/"
        }
    },
    "config": {
        "sort-packages": true
    }
}
